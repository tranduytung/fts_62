<% provide :title, t("user.sign_up") %>
<h1><strong><%= t "user.sign_up" %></strong></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for resource, as: resource_name,
      url: registration_path(resource_name) do |f| %>

      <%= devise_error_messages! %>

      <%= f.label :name %><br/>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>

      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, class: "form-control"  %>

      <%= f.label :chatword_id %><br/>
      <%= f.text_field :chatword_id, autofocus: true, class: "form-control" %>

      <%= f.label :password %>
      <%= t("devise.minimum_password_length",
        length: @minimum_password_length) if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "off",
        class: "form-control" %>

      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control" %>

      <div class="actions">
        <%= f.submit t("user.sign_up"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
